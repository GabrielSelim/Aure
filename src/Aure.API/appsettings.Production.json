{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "System.Net.Http.HttpClient": "Warning"
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "/var/log/aure/aure-api-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 90,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=aure_production;Username=aure_user;Password=#{POSTGRES_PASSWORD}#;Include Error Detail=true;Pooling=true;MinPoolSize=10;MaxPoolSize=100;"
  },
  "JwtSettings": {
    "SecretKey": "#{JWT_SECRET_KEY}#",
    "Issuer": "Aure.API",
    "Audience": "Aure.WebApp",
    "ExpirationMinutes": 30,
    "RefreshTokenExpirationDays": 7
  },
  "SefazSettings": {
    "Environment": "Producao",
    "State": "#{SEFAZ_STATE}#",
    "CertificatePath": "#{CERTIFICATE_PATH}#",
    "CertificatePassword": "#{CERTIFICATE_PASSWORD}#",
    "WebServiceTimeout": 30000,
    "StateEndpoints": {
      "SP": {
        "NFeAutorizacao": "https://nfe.fazenda.sp.gov.br/ws/nfeautorizacao4.asmx",
        "NFeConsultaProtocolo": "https://nfe.fazenda.sp.gov.br/ws/nfeconsultaprotocolo4.asmx",
        "NFeRecepcaoEvento": "https://nfe.fazenda.sp.gov.br/ws/nferecepcaoevento4.asmx"
      },
      "RJ": {
        "NFeAutorizacao": "https://www.nfe.fazenda.rj.gov.br/service/nfeautorizacao4.asmx",
        "NFeConsultaProtocolo": "https://www.nfe.fazenda.rj.gov.br/service/nfeconsultaprotocolo4.asmx",
        "NFeRecepcaoEvento": "https://www.nfe.fazenda.rj.gov.br/service/nferecepcaoevento4.asmx"
      },
      "MG": {
        "NFeAutorizacao": "https://nfe.fazenda.mg.gov.br/nfe2/services/NfeAutorizacao4",
        "NFeConsultaProtocolo": "https://nfe.fazenda.mg.gov.br/nfe2/services/NfeConsultaProtocolo4",
        "NFeRecepcaoEvento": "https://nfe.fazenda.mg.gov.br/nfe2/services/NfeRecepcaoEvento4"
      }
    }
  },
  "InvoiceSettings": {
    "DefaultSeries": 1,
    "DefaultNatureOperation": "Venda de mercadoria adquirida ou recebida de terceiros",
    "EnablePdfGeneration": true,
    "PdfTemplate": "default"
  },
  "EmailSettings": {
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "UseSsl": false,
    "Username": "aurecontroll@gmail.com",
    "Password": "#{EMAIL_PASSWORD}#",
    "FromEmail": "aurecontroll@gmail.com",
    "FromName": "Sistema Aure",
    "BaseUrl": "https://aureapi.gabrielsanztech.com.br"
  },
  "Encryption": {
    "Key": "#{ENCRYPTION_KEY}#",
    "IV": "#{ENCRYPTION_IV}#"
  },
  "BaseUrl": "https://aureapi.gabrielsanztech.com.br"
}